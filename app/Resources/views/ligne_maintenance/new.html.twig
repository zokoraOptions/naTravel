{% block body %} 

<div class="modal fade" id="addLigneMaintenanceModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Nouveau carburant</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Nouveau carburant
            </div>
            <div class="modal-footer">
                {{ form_start(form, { 'method' : 'post', 'action': path('ligne_maintenance_new') }) }}
                    <table class="table table-hove table-sm">
                    <tbody>   
                        <tr>
                            <td>{{ form_label(form.observation) }}</td>
                            <td>{{ form_widget(form.observation) }}</td>
                            <td>{{ form_errors(form.observation) }}</td>
                        </tr>             
                        <tr>
                            <td>{{ form_label(form.piece) }}</td>
                            <td>{{ form_widget(form.piece) }}</td>
                            <td>{{ form_errors(form.piece) }}</td>
                        </tr>                            
                        <tr>
                            <td>{{ form_label(form.fournisseur) }}</td>
                            <td>{{ form_widget(form.fournisseur) }}</td>
                            <td>{{ form_errors(form.fournisseur) }}</td>
                        </tr>                        
                        <tr>
                            <td>{{ form_label(form.prixUnitairePiece) }}</td>
                            <td>{{ form_widget(form.prixUnitairePiece) }}</td>
                            <td>{{ form_errors(form.prixUnitairePiece) }}</td>
                        </tr>             
                        <tr>
                            <td>{{ form_label(form.qtePiece) }}</td>
                            <td>{{ form_widget(form.qtePiece) }}</td>
                            <td>{{ form_errors(form.qtePiece) }}</td>
                        </tr> 
                        <tr>
                            <td>{{ form_label(form.maintenance) }}</td>
                            <td>{{ form_widget(form.maintenance) }}</td>
                            <td>{{ form_errors(form.maintenance) }}</td>
                        </tr>                          
                        <tr>
                            <td>
                                <div class="btn-group" role="group" aria-label="List">
                                    <input type="submit" value="Create" class="btn btn-primary" />                                    
                                </div>   
                            </td>                    
                        </tr>
                    </tbody>
                </table>                                                 
                {{ form_end(form) }}      
            </div>
        </div>
    </div>
</ div>  
{% endblock %}
