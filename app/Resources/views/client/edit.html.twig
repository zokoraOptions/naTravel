{% extends 'base.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <span>Modifier Client</span>
        </div>
        <div class="card-body text-left">
            {{ form_start(edit_form) }}
                <table class="table table-striped table-hove">
                    <tbody>                
                        <tr>
                            <td>{{ form_label(edit_form.nomClient) }}</td>
                            <td>{{ form_widget(edit_form.nomClient) }}</td>
                            <td>{{ form_errors(edit_form.nomClient) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_label(edit_form.adresse) }}</td>
                            <td>{{ form_widget(edit_form.adresse) }}</td>
                            <td>{{ form_errors(edit_form.adresse) }}</td>
                        </tr>
                       
                        <tr class="record_actions">
                            <td colspan="3"> 
                                <div class="btn-group" role="group" aria-label="List">
                                    <input type="submit" value="Edit" class="btn btn-primary" />
                                    <a href="{{ path('client_index') }}" class="btn btn-primary">Back to the list</a>
                                    {{ form_start(delete_form) }}
                                        <input type="submit" value="Delete" class="btn btn-danger">
                                    {{ form_end(delete_form) }}
                                </div>   
                            </td>                    
                        </tr>
                    </tbody>
                </table>    
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}
