{% block body %}
    
    <div class="modal fade" id="addCarburantModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Nouveau carburant</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Nouveau carburant
                </div>
                <div class="modal-footer">
                    {{ form_start(form, { 'method' : 'post', 'action': path('carburant_new') }) }}
                        <table class="table table-striped table-hove table-sm">
                        <tbody>   
                            <tr>
                                <td>{{ form_label(form.transport) }}</td>
                                <td>{{ form_widget(form.transport) }}</td>
                                <td>{{ form_errors(form.transport) }}</td>
                            </tr>             
                            <tr>
                                <td>{{ form_label(form.typeCarburant) }}</td>
                                <td>{{ form_widget(form.typeCarburant) }}</td>
                                <td>{{ form_errors(form.typeCarburant) }}</td>
                            </tr>                            
                            <tr>
                                <td>{{ form_label(form.numCarteCarburant) }}</td>
                                <td>{{ form_widget(form.numCarteCarburant) }}</td>
                                <td>{{ form_errors(form.numCarteCarburant) }}</td>
                            </tr>
                            <tr>
                                <td>{{ form_label(form.fournisseur) }}</td>
                                <td>{{ form_widget(form.fournisseur) }}</td>
                                <td>{{ form_errors(form.fournisseur) }}</td>
                            </tr>   
                            <tr>
                                <td>{{ form_label(form.prixUnitaire) }}</td>
                                <td>{{ form_widget(form.prixUnitaire) }}</td>
                                <td>{{ form_errors(form.prixUnitaire) }}</td>
                            </tr>             
                            <tr>
                                <td>{{ form_label(form.qte) }}</td>
                                <td>{{ form_widget(form.qte) }}</td>
                                <td>{{ form_errors(form.qte) }}</td>
                            </tr>  
                            <tr>
                                <td>{{ form_label(form.dateAchat) }}</td>
                                <td>{{ form_widget(form.dateAchat) }}</td>
                                <td>{{ form_errors(form.dateAchat) }}</td>
                            </tr>
                            <tr>
                                <td>{{ form_label(form.total) }}</td>
                                <td>{{ form_widget(form.total) }}</td>
                                <td>{{ form_errors(form.total) }}</td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="btn-group" role="group" aria-label="List">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                        <a href="{{ path('transport_index') }}" class="btn btn-primary" >Back to the list</a>
                                    </div>   
                                </td>                    
                            </tr>
                        </tbody>
                    </table>                                                 
                    {{ form_end(form) }}      
                </div>
            </div>
        </div>
    </ div>   
{% endblock %}
